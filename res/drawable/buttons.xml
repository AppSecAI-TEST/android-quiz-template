<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
   			<gradient
           		android:startColor="#bbbbbb"
                android:endColor="#999999"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#aaaaaa" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    
     <item android:state_selected="true" >
        <shape>
            <gradient
           		android:startColor="#bbbbbb"
                android:endColor="#999999"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#aaaaaa" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    
      <item android:state_enabled="false" >
        <shape>
            <gradient
                android:startColor="#E61612"
                android:endColor="#CC1010"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#aaaaaa" />
            <corners
                android:radius="3dp" />
            
        </shape>
    </item>
    
     
    <item>
        <shape>
            <gradient
                android:startColor="#e7e7e7"
                android:endColor="#bbbbbb"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#aaaaaa" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>
